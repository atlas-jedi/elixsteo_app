<div class="space-y-4 py-4">
  <div class="flex flex-col items-center justify-between py-4">
    <h1 class="text-lg">Listagem de Cupons</h1>
    
    <button class="aspect-square max-sm:p-0">
      Adicionar Cupom
    </button>
  </div>
  <!-- CouponDataFilter -->
  <!-- CouponDataTable -->
  <.table id="coupons" rows={@streams.coupons}>
    <:col :let={{_id, coupon}} label="Nome">{coupon.code}</:col>
    
    <:col :let={{_id, coupon}} label="Status">{coupon.status}</:col>
    
    <:col :let={{_id, coupon}} label="Valor">{coupon.discount}</:col>
    
    <:col :let={{_id, coupon}} label="Tipo">{coupon.type}</:col>
    
    <:action :let={{_id, coupon}}>
      <div class="sr-only">
        <.link navigate={~p"/coupons/#{coupon}"}>Show</.link>
      </div>
       <.link patch={~p"/coupons/#{coupon}/edit"}>Edit</.link>
    </:action>
    
    <:action :let={{id, coupon}}>
      <.link
        phx-click={JS.push("delete", value: %{id: coupon.id}) |> hide("##{id}")}
        data-confirm="Are you sure?"
      >
        Delete
      </.link>
    </:action>
  </.table>
</div>
